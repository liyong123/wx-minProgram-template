            <text>NANJING MAP</text>
          </view>
          <view class='eachAreaAll'>
            <view wx:for="{{eachAreaDatas}}" class='eachArea {{ currentArea == index ? "choosedArea" :""}}' data-areaTab="{{index}}" wx:key="areaTabUnique" bindtap='areaTabChange'>
              <text>{{item.name}}</text>
            </view>
          </view>
      </view> -->
    </view>
  </view>